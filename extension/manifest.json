{
    "manifest_version": 3,
    "name": "Highlighter",
    "description": "Highlight web articles",
    "version": "1.0",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/jquery-2.1.3.min.js",
                "src/storageManager.js",
                "src/highlight.js",
                "src/loadHighlight.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [{
        "resources": [
            "images/*.png"
        ],
        "matches": [
            "<all_urls>"
        ]
    }]
}