{
    "manifest_version": 2,
    "name": "Highlighter",
    "description": "Highlight web articles",
    "version": "1.0",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/jquery-2.1.3.min.js",
                "src/highlight.js",
                "src/listHighlight.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "<all_urls>"
    ],
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self';"
}